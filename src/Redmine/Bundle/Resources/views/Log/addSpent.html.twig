{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper-form-login" style="width: 500px">
        <form action="" method="post" {{ form_enctype(form) }} class="form-horizontal">
            <fieldset>
                <legend>Add spent time</legend>
                <div class="error">
                    {{ form_errors(form.hours) }}
                </div>
                <div class="control-group">
                    {{ form_label(form.hours, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9 padding-b20">
                        {{ form_widget(form.hours, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.comment, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
                    <div class="col-sm-9 padding-b20">
                        {{ form_widget(form.comment, { 'attr': { 'class': 'form-control'} }) }}
                    </div>
                </div>
                {{ form_rest(form) }}
                <div class="comment-button" style="margin-left: 140px"><input type="submit" class="btn btn-default" value="Submit"/><a href="{{ path('schedule_issue') }}?id={{ issue_id }}" style="margin-left:30px" class="btn btn-default" >Cancel</a></div>
            </fieldset>
        </form>
    </div>
{% endblock %}