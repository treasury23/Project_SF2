{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper-form-login" style="width: 950px">
        <table width="100%" class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <th>№</th>
                <th>Статус</th>
                <th>Приоритет</th>
                <th>Тема</th>
                <th>Автор</th>
                <th>Дата</th>
            </thead>
            {{ dump(issues) }}
            {% for issue in issues %}
                <tr>
                    <td>{{ issue.id }}</td>
                    <td>{{ issue.status.name }}</td>
                    <td>{{ issue.priority.name }}</td>
                    <td>{{ issue.subject }}</td>
                    <td>{{ issue.author.name }}</td>
                    <td>{{ issue.updated_on }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}