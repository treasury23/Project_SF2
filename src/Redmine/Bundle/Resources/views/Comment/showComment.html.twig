{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper-form-login" style="width: 800px">

    {% for comment in comments %}
    <div class="comment">
            <div class="comment-text">
                <div class="comment-user">User: <strong>{{ comment.user }}</strong><span> Date: {{ comment.createdAt|date("d.m.Y H:i:s") }}</span></div>
                {{ comment.text }}
            </div>
    </div>
    {% endfor %}
    <form action="" method="post" {{ form_enctype(form) }} class="form-horizontal">
        <fieldset>
            <legend>Add comment</legend>
            <div class="error">
                {{ form_errors(form) }}
            </div>
            <div class="control-group">
                {{ form_label(form.text, null, { 'label_attr': { 'class': 'col-sm-3 control-label'} }) }}
                <div class="col-sm-9">
                    {{ form_widget(form.text, { 'attr': { 'class': 'form-control', 'rows':5} }) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="comment-button"><input type="submit" class="btn btn-default" value="Save"/><a href="{{ path('home') }}" style="margin-left:30px" class="btn btn-default" >Cancel</a></div>
        </fieldset>
    </form>
</div>
{% endblock %}