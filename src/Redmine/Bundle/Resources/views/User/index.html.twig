{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper-form-login" style="width: 800px">
<table width="100%" class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <th>Наименование проекта</th>
        <th>Дата создания</th>
        <th>Задачи</th>
        <th>Комментарии</th>
    </thead>

    {% for project in projects %}
    <tr>
        <td>{{ project.name }}</td>
        <td>{{ project.updatedAt|date("m.d.Y H:i:s") }}</td>
        <td><a href="{{ path('show_issue') }}?id={{ project.id }}">Посмотреть</a></td>
        <td><a href="{{ path('show_comment') }}?id={{ project.id }}">Посмотреть</a></td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}

