{% extends 'base.html.twig' %}

{% block menu %}{% endblock %}
{% block body %}
    <div class="wrapper-form-login">
        <form action="{{ path('login_check') }}" method="post" class="form-horizontal">
            <fieldset>
                <legend>eKreative</legend>
                {% if error %}
                    <div class="error">{{ error.message | trans}}</div>
                {% endif %}
                <div class="control-group">
                    <label class="col-sm-2 control-label" for="username">Login:</label>
                    <div class="col-sm-10 padding-b20">
                        <input type="text" id="username" name="_username" class="form-control" placeholder="Login" value="{{ last_username }}" required/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="col-sm-2 control-label" for="password">Password:</label>
                    <div class="col-sm-10 padding-b20">
                        <input type="password" id="password" name="_password"  placeholder="Password" class="form-control" required/>
                    </div>
                </div>

                <div class="control-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <input type="submit" name="login" class="btn btn-default btn-block" value="Sign in"/>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}



